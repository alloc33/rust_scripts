#!/usr/bin/env rust-script
//! ```cargo
//! [dependencies]
//! ```

fn copy_if<F>(slice: &[i32], pred: F) -> Vec<i32>
where
    F: for<'a> Fn(&'a i32) -> bool,
{
    let mut result = vec![];

    for element in slice {
        if pred(element) {
            result.push(*element);
        }
    }

    result
}

fn main() {}
